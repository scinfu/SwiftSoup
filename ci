#!/usr/bin/env bash

VERSION="3.1"
echo "Swift $VERSION Continuous Integration";

# Determine OS
UNAME=`uname`;
if [[ $UNAME == "Darwin" ]];
then
    OS="macos";
else
    if [[ $UNAME == "Linux" ]];
    then
        UBUNTU_RELEASE=`lsb_release -a 2>/dev/null`;
        if [[ $UBUNTU_RELEASE == *"16.04"* ]];
        then
            OS="ubuntu1604";
        else
            OS="ubuntu1404";
        fi
    else
        echo "Unsupported Operating System: $UNAME";
    fi
fi
echo "üñ• Operating System: $OS";

if [[ $OS != "macos" ]];
then
    echo "üìö Installing Dependencies"
    sudo apt-get install -y clang libicu-dev uuid-dev

    echo "üê¶ Installing Swift";
    if [[ $OS == "ubuntu1604" ]];
    then
        SWIFTFILE="swift-$VERSION-RELEASE-ubuntu16.04";
    else
        SWIFTFILE="swift-$VERSION-RELEASE-ubuntu14.04";
    fi
    wget https://swift.org/builds/swift-$VERSION-release/$OS/swift-$VERSION-RELEASE/$SWIFTFILE.tar.gz
    tar -zxf $SWIFTFILE.tar.gz
    export PATH=$PWD/$SWIFTFILE/usr/bin:"${PATH}"
fi

echo "üìÖ Version: `swift --version`";

echo "üöÄ Building";
swift build
if [[ $? != 0 ]];
then
    echo "‚ùå  Build failed";
    exit 1;
fi

echo "üíº Building Release";
swift build -c release
if [[ $? != 0 ]];
then
    echo "‚ùå  Build for release failed";
    exit 1;
fi

echo "üîé Testing";

swift test
if [[ $? != 0 ]];
then
    echo "‚ùå Tests failed";
    exit 1;
fi

if [[ $OS == "macos" ]];
then
    echo "Running on $OS - building on Xcode"
    xcodebuild -project SwiftSoup.xcodeproj -scheme SwiftSoup -sdk iphonesimulator ONLY_ACTIVE_ARCH=NO -destination 'platform=iOS Simulator,name=iPhone 6' build test
    if [[ $? != 0 ]];
    then
        echo "‚ùå Xcode Project Tests failed";
        exit 1;
    fi

    pod lib lint
    if [[ $? != 0 ]];
    then
        echo "‚ùå Pod failed to lint";
        exit 1;
    fi
fi

echo "‚úÖ Done"
