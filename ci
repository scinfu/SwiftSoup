#!/usr/bin/env bash

# Determine OS
UNAME=`uname`;
if [[ $UNAME == "Darwin" ]];
then
    OS="macos";
else
    if [[ $UNAME == "Linux" ]];
    then
        UBUNTU_RELEASE=`lsb_release -a 2>/dev/null`;
        if [[ $UBUNTU_RELEASE == *"16.04"* ]];
        then
            OS="ubuntu1604";
        else
            OS="ubuntu1404";
        fi
    else
        echo "Unsupported Operating System: $UNAME";
    fi
fi
echo "ğŸ–¥ Operating System: $OS";

if [[ $OS != "macos" ]];
then
    echo "ğŸ¦ Installing Swift";
    eval "$(curl -sL https://apt.vapor.sh)";
    sudo apt-get install vapor;
    sudo chmod -R a+rx /usr/;
fi

echo "ğŸ“… Version: `swift --version`";

echo "ğŸš€ Building";
swift build
if [[ $? != 0 ]];
then
    echo "âŒ  Build failed";
    exit 1;
fi

echo "ğŸ’¼ Building Release";
swift build -c release
if [[ $? != 0 ]];
then
    echo "âŒ  Build for release failed";
    exit 1;
fi

echo "ğŸ” Testing";

swift test
if [[ $? != 0 ]];
then
    echo "âŒ Tests failed";
    exit 1;
fi

if [[ $OS == "macos" ]];
then
    echo "Running on $OS - building on Xcode"
    xcodebuild -project SwiftSoup.xcodeproj -scheme SwiftSoup-iOS -sdk iphonesimulator ONLY_ACTIVE_ARCH=NO -destination 'platform=iOS Simulator,name=iPhone 6' build test
    if [[ $? != 0 ]];
    then
        echo "âŒ Xcode Project Tests failed";
        exit 1;
    fi

    pod lib lint
    if [[ $? != 0 ]];
    then
        echo "âŒ Pod failed to lint";
        exit 1;
    fi
fi

echo "âœ… Done"
